<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Poker.Forms.Views.Pages.ReminderPage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal">
                <Button Command="{Binding CancelCommand}" Text="Cancel" HeightRequest="50"/>
                <Button Command="{Binding SaveCommand}" Text="Save" HeightRequest="50"/>
            </StackLayout>
            <Entry Placeholder="Reminder Name" Text="{Binding Name, Mode=TwoWay}"/>
            <StackLayout HorizontalOptions="CenterAndExpand">
                <Label>Repeats</Label>
                <StackLayout Orientation="Horizontal">
                    <StackLayout BackgroundColor="LightGray">
                        <Entry Text="{Binding RepeatCount, Mode=OneWay}" TextChanged="OnRepeatCountChanged" Keyboard="Numeric" />
                        <Label TextColor="Black">times</Label>
                    </StackLayout>
                    <StackLayout BackgroundColor="LightGray">
                        <Label TextColor="Black">starting</Label> 
                        <TimePicker Time="{Binding StartTime}"/>
                    </StackLayout>
                    <StackLayout BackgroundColor="LightGray">
                        <Label TextColor="Black">ending</Label> 
                        <TimePicker Time="{Binding StartTime}"/>
                    </StackLayout>
                </StackLayout>
            </StackLayout>
            <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
                <Label VerticalTextAlignment="Center">With minimum</Label>
                <Entry Text="{Binding MinimumTime}" TextChanged="OnMinimumTimeBetweenChanged" Keyboard="Numeric" WidthRequest="40" />
                <Picker ItemsSource="{Binding TimeTypes}" SelectedItem="{Binding TimeType}" WidthRequest="50" />
                <Label VerticalTextAlignment="Center">between</Label>
            </StackLayout>
            <StackLayout>
                <Label>Snooze Options</Label>
                <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
                    <StackLayout BackgroundColor="{Binding Snooze5Color}">
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding SnoozeToggle}" CommandParameter="5" />
                        </StackLayout.GestureRecognizers>
                        <Label>5</Label>
                        <Label>min</Label>
                    </StackLayout>
                    <StackLayout BackgroundColor="{Binding Snooze15Color}">
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding SnoozeToggle}" CommandParameter="15" />
                        </StackLayout.GestureRecognizers>
                        <Label>15</Label>
                        <Label>min</Label>
                    </StackLayout>
                    <StackLayout BackgroundColor="{Binding Snooze30Color}">
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding SnoozeToggle}" CommandParameter="30" />
                        </StackLayout.GestureRecognizers>
                        <Label>30</Label>
                        <Label>min</Label>
                    </StackLayout>
                    <StackLayout BackgroundColor="{Binding Snooze60Color}">
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding SnoozeToggle}" CommandParameter="60" />
                        </StackLayout.GestureRecognizers>
                        <Label>60</Label>
                        <Label>min</Label>
                    </StackLayout>
                </StackLayout>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Switch IsToggled="{Binding Monday, Mode=TwoWay}"/>
                <Label>Monday</Label>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Switch IsToggled="{Binding Tuesday, Mode=TwoWay}"/>
                <Label>Tuesday</Label>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Switch IsToggled="{Binding Wednesday, Mode=TwoWay}"/>
                <Label>Wednesday</Label>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Switch IsToggled="{Binding Thursday, Mode=TwoWay}"/>
                <Label>Thursday</Label>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Switch IsToggled="{Binding Friday, Mode=TwoWay}"/>
                <Label>Friday</Label>
            </StackLayout>
            <StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label>Ringtone</Label>
                    <Switch IsToggled="{Binding RingtoneEnabled}" />
                </StackLayout>
                <Picker SelectedItem="{Binding SelectedRingtone}">
                    <Picker.Items>
                        <x:String>Ringtone 1</x:String>
                        <x:String>Ringtone 2</x:String>
                        <x:String>Ringtone 3</x:String>
                        <x:String>Ringtone 4</x:String>
                    </Picker.Items>
                </Picker>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>