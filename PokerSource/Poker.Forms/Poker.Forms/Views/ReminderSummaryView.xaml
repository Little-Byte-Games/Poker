<?xml version="1.0" encoding="UTF-8"?>

<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Poker.Forms.Views.ReminderSummaryView">
    <ContentView.Content>
        <Frame BackgroundColor="{Binding MainColor}" OutlineColor="{Binding BorderColor}">
            <StackLayout>
                <Switch IsToggled="{Binding IsEnabled}" />
                <StackLayout>
                    <StackLayout.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding SelectReminder}" />
                    </StackLayout.GestureRecognizers>
                    <Label Text="{Binding Name}" />
                    <ProgressBar Progress="{Binding Progress}" />
                    <Label Text="{Binding AlarmCounts}" />
                </StackLayout>
                <Button Image="icon.png" WidthRequest="50" />
            </StackLayout>
        </Frame>
    </ContentView.Content>
</ContentView>